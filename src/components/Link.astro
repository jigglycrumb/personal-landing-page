---
export interface Props {
  body?: string;
  href: string;
  icon?: string;
  title: string;
}

const { body, href, icon, title } = Astro.props;
---

<li class="link-card">
  <a href={href} target="_blank">
    {
      icon && (
        <div class="icon-container">
          <img class="icon" src={icon} alt={title} />
        </div>
      )
    }
    <div class="link-title">
      <h2>
        {title}
      </h2>
      {body && <p>{body}</p>}
    </div>
  </a>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0.25rem;
    background-color: white;
    background-image: none;
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    transition: background-position 0ms cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
    margin-bottom: 1ch;
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: white;
    opacity: 0.8;
  }

  .link-title {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0ms cubic-bezier(0.22, 1, 0.36, 1);
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }

  .icon-container {
    margin-right: 2ch;
    float: left;
    height: 100%;
    align-content: center;
    display: grid;
  }

  .icon {
    height: 32px;
    width: 32px;
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }

  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
